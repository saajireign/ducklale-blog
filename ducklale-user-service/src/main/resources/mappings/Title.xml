<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">



<mapper namespace="com.ducklale.user.domain.dao.TitleDao">

	<!-- 映射结果集 -->
	<resultMap id="titleResultMap" type="com.ducklale.user.domain.entity.TitlePO">
		<id property="id" column="id" jdbcType="INTEGER"/>
    	<result property="achievementPoints" column="achievement_points" jdbcType="INTEGER"/>
    	<result property="title" column="title" jdbcType="VARCHAR"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="titleColumnList">
	    <![CDATA[
			achievement_points,title,id
	    ]]>
	</sql>
	
	<!-- 根据主键查询 -->
	<select id="selectById" resultMap="titleResultMap"  parameterType="java.lang.Integer">
		SELECT <include refid="titleColumnList" />
	    <![CDATA[
	    FROM t_title 
        WHERE 
	        id = #{id,jdbcType=INTEGER}
	    ]]>
	</select>
	
	
	<!-- 根据ID删除 -->
    <delete id="deleteById"  parameterType="java.lang.String">
	    <![CDATA[
	        DELETE FROM t_title 
	        WHERE
	        id = #{id,jdbcType=INTEGER}
	    ]]>
    </delete>
   
  	
  	<!-- 根据参数对象中有值的进行插入-->
	<insert id="insert" parameterType="com.ducklale.user.domain.entity.TitlePO" >
		insert into t_title
		<trim prefix="(" suffix=")" suffixOverrides="," >
	     	<if test="achievementPoints != null" >
		    achievement_points,
		  	</if>
	     	<if test="title != null" >
		    title,
		  	</if>
	     	<if test="id != null" >
		    id,
		  	</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
	     	<if test="achievementPoints != null" >
		    #{achievementPoints,jdbcType=INTEGER},
		  	</if>
	     	<if test="title != null" >
		    #{title,jdbcType=VARCHAR},
		  	</if>
	     	<if test="id != null" >
		    #{id,jdbcType=INTEGER},
		  	</if>
		</trim>
	</insert>
	
	
	<!-- 根据ID进行更新 -->
	<update id="updateById"  parameterType="com.ducklale.user.domain.entity.TitlePO">
		update t_title
		<set>
			<if test="achievementPoints != null" >
			 achievement_points = #{achievementPoints,jdbcType=INTEGER},
			</if>
			<if test="title != null" >
			 title = #{title,jdbcType=VARCHAR},
			</if>
			<if test="id != null" >
			 id = #{id,jdbcType=INTEGER},
			</if>
		</set>
		where
			id = #{id,jdbcType=INTEGER}
	</update>
	<!-- 批量插入 -->
	<insert id="insertBatch"  parameterType="com.ducklale.user.domain.entity.TitlePO">
		INSERT INTO t_title 
		       	<trim prefix="(" suffix=")" suffixOverrides="," >
	  				achievement_points,title,
       			</trim>
        VALUES
       	<foreach collection="list" item="rel" separator=",">
       	<trim prefix="(" suffix=")" suffixOverrides="," >
       		#{rel.achievementPoints,jdbcType=INTEGER},#{rel.title,jdbcType=VARCHAR},
       	</trim>
       	</foreach>
       	
	</insert>
</mapper>

