<?xml version="1.0" encoding="UTF-8"?>
<configuration> 
　　　　	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender"> 
　　　　　　	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy"> 
　　　　　　　　	<fileNamePattern>/midware/logs/logFile.%d{yyyy-MM-dd}.log</fileNamePattern> 
　　　　　　　　　　<maxHistory>30</maxHistory> 
　　　　　　　　</rollingPolicy> 
　　　　　　　　<encoder> 
　　　　　　　　　	<pattern>%d{HH:mm:ss.SSS} %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern> 
　　　　　　　　</encoder> 
　　　　　　</appender>
			<appender name="errorAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
				<file>/midware/logs/error.log</file>
				<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
					<fileNamePattern>/midware/logs/venality-%d{yyyy-MM-dd}.log</fileNamePattern>  
			    </rollingPolicy>
				<encoder>
					<pattern>%d{HH:mm:ss.SSS} %thread %X{invokeNo} %logger{40} %msg%n</pattern>  
			    </encoder>
				<filter class="ch.qos.logback.classic.filter.LevelFilter"><!-- 只打印错误日志 -->
					<level>ERROR</level>
					<onMatch>ACCEPT</onMatch>
					<onMismatch>DENY</onMismatch>
				</filter>
			</appender>

			<root level="INFO">
				<appender-ref ref="FILE" />
			</root>
			<logger name="com.ducklale" level="INFO">
				<appender-ref ref="errorAppender" />
			</logger>
</configuration>